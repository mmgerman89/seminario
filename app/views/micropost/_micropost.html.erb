
<% Micropost.all.each do |m| %>
	<div class="list-group">
	  <li class="list-group-item active">
	  	<div class="media">
		  <div class="media-left media-middle">
		  	<% 	
		  		fem = Sex.find_by_name("Femenino")
		  		if m.user.sex == fem
		  			profile_picture = "signup_female.png"
		  		else
		  			profile_picture = "signup_male.jpg"
		  		end
		  	%>
	      	<img class="media-object" src="/img/<%= profile_picture %>" alt="Foto de perfil">
		  </div>
		  <div class="media-body">
		  	<div class="media-heading">
		    	<h4 class="state-head"><b><%= m.user.first_name %>:</b></h4>
			</div>
		    <p class="state-content"><%= m.content %></p>
		    <p class="state-foot"><%= m.created_at %></p>
		  </div>
		  <div class="media-right">
			<% if current_user == m.user %>
				<%= link_to "x", m, method: :delete, class: "btn btn-danger",
											data: {confirm: "¿Estás seguro?"} %>
			<% else %>
			
			<% end %>
		  </div>
		</div>
	  </li>
	</div>
<% end %>
