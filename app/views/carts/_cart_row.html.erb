<div class="well">
	<%= form_for order_line, remote: true do |f| %>
		<div class="row">
			<div class="col-xs-8">
				<div class="media">
					<div class="media-left">
						<img class="media-object" src="<%= item.photo %>" alt="<%= item.name %>" width="100px" height="100px">
					</div>
					<div class="media-body">
						<h4 class="media-heading"><%= item.name %></h4>
						<%= item.description %>
						<%= f.text_field :observation, value: order_line.observation, class: "form-control" %>
					</div>
				</div>
			</div>
			<div class="col-xs-4">
			  
			    <h4 class="text-right">Precio unitario: <span style="color: green"><%= number_to_currency order_line.unit_price %></span></h4>
			    <div class="row">
			      <div class="col-xs-4">
			        <%= f.number_field :quantity, value: order_line.quantity.to_i, class: "form-control", min: 1 %>
			        <%= f.hidden_field :product_id, value: item.id %>
			      </div>
			      <div class="col-xs-8 text-right">
			        <div class="btn-group">
			          <%= f.submit "Actualizar", class: "btn btn-primary" %>
			          <%= link_to "Quitar", order_line, { data: { confirm: "¿Está seguro de quitar '#{order_line.item.name}' de su pedido?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
			        </div>
			      </div>
			    </div>
			    <h4 class="text-right">Sub-total: <span style="color: green"><%= number_to_currency order_line.total_price %></span></h4>
			 
			</div>
		</div>
	<% end %>
</div>