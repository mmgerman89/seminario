<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= item.name %></h4>
      <p><%= item.description %></p>
    </div>
    <div class="col-xs-4">
      
      <%= form_for order_line, remote: true do |f| %>
        <h4 class="text-right">Precio unitario: <span style="color: green"><%= number_to_currency order_line.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_line.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: item.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Actualizar cantidad", class: "btn btn-primary" %>
              <%= link_to "Quitar", order_line, { data: { confirm: "¿Está seguro de quitar '#{order_line.item.name}' de su pedido?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Precio total: <span style="color: green"><%= number_to_currency order_line.total_price %></span></h4>
      <% end %>
    </div>
    
  </div>
</div>