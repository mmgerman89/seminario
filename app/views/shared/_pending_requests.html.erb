<div class="panel panel-primary">
	<div class="panel-heading">Solicitudes pendientes</div>
	<div class="panel-body">
		<% count = @friendship_requests.count %>
		<% if count > 0 %>
			<div id="requestsCarousel" class="carousel slide" data-ride="carousel">
			  <!-- Indicators -->
			  <ol class="carousel-indicators">
			  	<% for i in 0..(count-1) %>
			  		<li data-target="#requestsCarousel" data-slide-to="<%= i %>" class="<%= (i == 0) ? 'active' : ' ' %>"></li>
			  	<% end %>
			  </ol>
			
			  <!-- Wrapper for slides -->
			  <div class="carousel-inner" role="listbox">
				<% @friendship_requests.each do |user| %>
				    <div class="<%= user == @friendship_requests.first ? 'item active' : 'item' %>">
				      	<div class="media">
						  <div class="media-left media-middle">
						    <a href="#">
						      <img class="media-object" src="<%= user.photo_url %>" alt="Foto de perfil" width="64px" height="64px">
						    </a>
						  </div>
						  <div class="media-body">
						    <h4 class="media-heading"><%= user.first_name + ' ' + user.last_name %></h4>
						    <p><%= link_to "Aceptar", accept_request_path(friend_id: user), method: :post %> | <%= link_to "Rechazar", cancel_request_path(friend_id: user), method: :post %></p>
						  </div>
						</div>
				    </div>
				<% end %>
			  </div>
			  <!-- Left and right controls -->
			  <a class="left carousel-control" href="#requestsCarousel" role="button" data-slide="prev">
			    <
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#requestsCarousel" role="button" data-slide="next">
			    >
			    <span class="sr-only">Next</span>
			  </a>
			</div>
		<% else %>
			<p> No existen solicitudes pendientes </p>
		<% end %>	
	</div>
</div>

