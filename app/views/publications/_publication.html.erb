<% @publications.each do |p| %>
	<div class="list-group">
	  <li class="list-group-item active">
	  	<div class="media">
		  <div class="media-left media-middle">
	      	<img class="media-object" src="<%= p.branch.photo_url %>" alt="Foto de perfil" width="64px" height="64px">
		  </div>
		  <div class="media-body">
		  	<div class="media-heading">
		    	<h4 class="state-head"><b><%= p.branch.name %>:</b></h4>
			</div>
		    <p class="state-content"><%= p.content %></p>
		    <p class="state-foot"><%= p.created_at %></p>
		  </div>
		  <div class="media-right">
		  	<% if user_signed_in? %>
				<% if current_user.id == p.user_id %>
					<%= link_to "x", p, method: :delete, class: "btn btn-danger",
												data: {confirm: "¿Estás seguro?"} %>
				<% else %>
				<% end %>
			<% end %>
		  </div>
		</div>
	  </li>
	</div>
<% end %>