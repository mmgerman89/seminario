<div class="page-header">
	<div class="row">
		<div class="col-xs-8 col-sm-8 col-md-8">
			<div class="img-branch">
				<img src="<%= current_branch.photo_url %>" alt="<%= current_branch.name %>" width="100px" height="100px"/>
			</div>
			<div class="title-branch">
				<h1 id="branch-title"><%= title %></h1>
				<h2><%= current_branch.commerce.name + ' - ' + current_branch.name %></h2>
			</div>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4">
			<%= render 'shared/branch_info' %>
		</div>
	</div>
</div>
<ul class="nav nav-tabs nav-justified">
  <li role="presentation" class="<%= @tabs["wall"] %>">
  	<a href="<%= @tabs["wall"] == "active" ? "#" : branch_path(@branch.id) %>">Muro</a>
  </li>
  <li role="presentation" class="<%= @tabs["orders"] %>">
  	<a href="<%= @tabs["orders"] == "active" ? "#" : orders_path %>">Pedidos <span class="badge"><%= "#{orders}" if orders != 0 %></span></a>
  <li role="presentation" class="<%= @tabs["bookings"] %>">
  	<a href="<%= @tabs["reservations"] == "active" ? "#" : commerce_bookings_path %>">Reservas <span class="badge"><%= "#{@requests}" if @requests != 0 %></span></a>
  <li role="presentation" class="<%= @tabs["reviews"] %>">
  	<a href="<%= @tabs["reviews"] == "active" ? "#" : commerce_reviews_path %>">Opiniones <span class="badge"><%= "#{@requests}" if @requests != 0 %></span></a>
  </li>
  <li role="presentation" class="<%= @tabs["menus"] %>">
  	<a href="<%= @tabs["menus"] == "active" ? "#" : edit_menu_path(@branch.id) %>">Carta</a>
  </li>
  <li role="presentation" class="<%= @tabs["followers"] %>">
  	<a href="<%= @tabs["orders"] == "active" ? "#" : commerce_followers_path %>">Seguidores</a>
  </li>
  <li role="presentation" class="<%= @tabs["admin"] %>">
  	<a href="<%= @tabs["bookings"] == "active" ? "#" : commerce_admin_path %>">Administraci√≥n</a>
  </li>
</ul>

