<% modal ||= false %>
<% remote = modal ? true : false %>

<%= form_for @order_line, remote: remote do |f| %>
	<% if @order_line.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@order_line.errors.count, "error") %> prohibited this item from being saved:</h2>

			<ul>
				<% @order_line.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<h3><%= item.name %></h3>
	<p><%= item.description %></p>
	<div class="form-group">
		<div class="input-group">
		  <span class="input-group-addon" id="basic-addon1">Cant.</span>
		  <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="input-group">
		  <span class="input-group-addon" id="basic-addon1">Nota: </span>
		  <%= f.text_field :observation, class: "form-control" %>
		</div>
	</div>
	
	<%= f.hidden_field :item_id, value: item.id %>
	
	<div class="actions">
		<%= f.submit "Aceptar", class: "btn btn-primary", "id" => "modalAccept" %>
	</div>
	
<% end %>

