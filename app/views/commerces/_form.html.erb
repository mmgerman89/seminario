		    	<p><%= message %></p>
		    </div>
		  <% end %>
		</div>
	<% end %>
	
	<div class="form-group">
		<%= f.label "Nombre del Comercio" %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "CategorÃ­as" %>
