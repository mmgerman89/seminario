<%
	@tabs = Hash.new
	@tabs["config"] = "active"
%>
<%= render 'layouts/tabs_client' %>
<%= devise_error_messages! %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Editar cuenta de <%= @user.first_name  %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <div class="form-group">
      <%= f.label "E-mail" %>
      <%= f.email_field :email, class: "form-control", readonly: true %>
    </div>
    <div class="form-group">
        <%= f.label "Nombre" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Apellido" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Sexo" %>
        <%= f.collection_select :sex_id, Sex.all, :id, :name, {prompt: "Selecciona un sexo"}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label "Foto (URL)" %>
        <%= f.text_field :photo_url, class: "form-control" %>
      </div>
    <div class="form-group">
      <%= f.label "Contrase単a" %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "dejar en blanco si no se desea cambiar") %>)</i><br />
      <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Confirmar contrase単a" %><br />
      <%= f.password_field :password_confirmation, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label "Contrase単a actual" %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', :default => 'necesitamos tu contrase単a actual para aplicar los cambios') %>)</i>
      <%= f.password_field :current_password, class: "form-control" %>
    </div>
    <%= f.submit t('.update', :default => "Actualizar"), class: "btn btn-primary" %></div>
<% end %>
</div>

<p><%= t('.unhappy', :default => 'Queres dejarnos') %>? <%= link_to t('.cancel_my_account', :default => "Cancelar mi cuenta"), registration_path(resource_name), :data => { :confirm => t('.are_you_sure', :default => "Are you sure?") }, :method => :delete %>.</p>

<%= link_to "Volver", :back %>